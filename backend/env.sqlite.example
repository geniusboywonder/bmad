# ===== BMAD SQLITE FALLBACK CONFIGURATION =====
# SQLite configuration for environments without PostgreSQL

# ===== APPLICATION CONFIGURATION =====
APP_NAME=BMAD Enterprise AI Orchestration Platform
APP_VERSION=5.0.0
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_super_secure_secret_key_here_64_chars_minimum

# ===== DATABASE CONFIGURATION (SQLite) =====
# SQLite database for local development or fallback scenarios
DATABASE_URL=sqlite:///./bmad.db
DATABASE_TEST_URL=sqlite:///./bmad_test.db

# SQLite-specific settings (pool settings not applicable)
DATABASE_POOL_SIZE=1
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_TIMEOUT=30

# ===== REDIS CONFIGURATION =====
# Local Redis for development
REDIS_URL=redis://localhost:6379/0
REDIS_CELERY_URL=redis://localhost:6379/1

# ===== CELERY CONFIGURATION =====
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===== API CONFIGURATION =====
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000"]

# ===== WEBSOCKET CONFIGURATION =====
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ===== LLM CONFIGURATION =====
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_KEY_KEY=your_gemini_key_here
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/google/credentials.json

# ===== AGENT-TO-LLM MAPPING =====
ANALYST_AGENT_PROVIDER=anthropic
ANALYST_AGENT_MODEL=claude-3-5-sonnet-20241022
ARCHITECT_AGENT_PROVIDER=anthropic
ARCHITECT_AGENT_MODEL=claude-3-5-sonnet-20241022
CODER_AGENT_PROVIDER=anthropic
CODER_AGENT_MODEL=claude-3-5-sonnet-20241022
TESTER_AGENT_PROVIDER=anthropic
TESTER_AGENT_MODEL=claude-3-5-sonnet-20241022
DEPLOYER_AGENT_PROVIDER=anthropic
DEPLOYER_AGENT_MODEL=claude-3-5-sonnet-20241022

# ===== LLM RELIABILITY CONFIGURATION =====
LLM_RETRY_MAX_ATTEMPTS=3
LLM_RETRY_BASE_DELAY=1.0
LLM_RESPONSE_TIMEOUT=30
LLM_MAX_RESPONSE_SIZE=50000
LLM_ENABLE_USAGE_TRACKING=true

# ===== HITL SAFETY CONFIGURATION =====
HITL_ENABLED=true
HITL_APPROVAL_TIMEOUT_MINUTES=30
HITL_BUDGET_DAILY_LIMIT=10000
HITL_BUDGET_SESSION_LIMIT=2000
HITL_EMERGENCY_STOP_ENABLED=true
HITL_WEBSOCKET_NOTIFICATIONS=true

# ===== SECURITY =====
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30